{
  "name": "@solid-pft/core",
  "version": "1.0.0",
  "description": "The open peeps assets packages converted to solid JS components",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "author": "Nisheed Jagadish",
  "license": "MIT",
  "scripts": {
    "build:tools": "tsc --project tsconfig.tools.json",
    "build:assets": "node ./build/convert-assets.js",
    "build:lib": "tsc --project tsconfig.peeps.json",
    "build": "yarn build:assets && yarn build:lib",
    "clean": "node ./build/clear-folders.js",
    "copy:assets": "node ./build/copy-build-assets.js",
    "prebuild": "yarn clean && yarn build:tools && yarn copy:assets",
    "postbuild:assets": "node ./build/create-index.js",
    "postbuild": "node ./build/copy-lib-assets.js"
  },
  "dependencies": {
    "change-case": "^4.1.2",
    "del": "^6.0.0",
    "ejs": "^3.1.6",
    "fast-glob": "^3.2.11",
    "fs-extra": "^10.0.0",
    "solid-js": "^1.3.7",
    "svgo": "^2.8.0"
  },
  "devDependencies": {
    "@types/change-case": "^2.3.1",
    "@types/ejs": "^3.1.0",
    "@types/fs-extra": "^9.0.13",
    "@types/svgo": "^2.6.1",
    "typescript": "^4.5.5"
  },
  "lib": { 
    "assets": "lib/assets",
    "components": "lib/components"
  }
}

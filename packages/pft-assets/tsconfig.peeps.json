{
    "compilerOptions": {
        "module": "CommonJS",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "ESNext",
        "noImplicitAny": false,
        "moduleResolution": "Node",
        "outDir": "lib/components",
        "baseUrl": "./build/components",
        "declaration": true,
        "jsx": "preserve",
        "jsxImportSource": "solid-js",
        "types": [
          "solid-js",
          "solid-js/web",
         
        ],
        "typeRoots": [
            "node_modules/@types",
            "src/types"
        ],
        "paths": {
            "*": [
                "node_modules/*",
            ]
        },
    },
    "include": [
        "build/components",
        "src/types",
    ]
}
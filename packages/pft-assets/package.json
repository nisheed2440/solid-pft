{
  "name": "@solid-pft/assets",
  "version": "1.0.0",
  "description": "The open peeps assets packages converted to solid JS components",
  "main": "index.js",
  "author": "Nisheed Jagadish",
  "license": "MIT",
  "scripts": {
    "build:tools": "tsc --project tsconfig.tools.json",
    "build:assets": "node build/convert-assets.js",
    "build:lib": "tsc --project tsconfig.peeps.json",
    "build": "yarn build:assets && yarn build:lib",
    "clean": "node build/clear-folders.js",
    "prebuild": "yarn build:tools && yarn clean",
    "postbuild": "node build/copy-assets.js",
    "postinstall": "yarn build"
  },
  "dependencies": {
    "change-case": "^4.1.2",
    "del": "^6.0.0",
    "ejs": "^3.1.6",
    "fast-glob": "^3.2.11",
    "fs-extra": "^10.0.0",
    "solid-js": "^1.3.7",
    "svgo": "^2.8.0",
    "typescript": "^4.5.5"
  },
  "devDependencies": {
    "@types/change-case": "^2.3.1",
    "@types/ejs": "^3.1.0",
    "@types/fs-extra": "^9.0.13",
    "@types/svgo": "^2.6.1"
  },
  "lib": {
    "assets": "lib/assets/peeps",
    "components": "lib/components"
  },
  "types": "./lib/index.d.ts"
}
